<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#2f2f31"
    >
    <Button
        android:id="@+id/startButton"
        android:backgroundTint="#efbfbf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START!"/>
    <!-- To see Time -->
    <TextView
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:id="@+id/timerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<LinearLayout
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context="com.example.jameslu.lacasadepappi.MainActivity"
    >


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="140dp">
    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="140dp"
        android:backgroundTint="#93090d"
    />
    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="140dp"
        android:backgroundTint="#d30d12"
        />
    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="140dp"
        android:backgroundTint="#fd1d23"
        />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:backgroundTint="#5c0002"
            />
        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:backgroundTint="#93090d"
            />
        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:backgroundTint="#d30d12"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:backgroundTint="#450003"
            />
        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:backgroundTint="#5c0002"
            />
        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:backgroundTint="#93090d"
            />
    </LinearLayout>

</LinearLayout>

</FrameLayout>